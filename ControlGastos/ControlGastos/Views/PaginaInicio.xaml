<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlGastos.Views.PaginaInicio"
             BindingContext="{Binding Main,Source={StaticResource Key=Locator}}">
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding PaginaInicio}"
                     VerticalOptions="CenterAndExpand"
                     Spacing="20"
                     Margin="10">
            <StackLayout Orientation="Horizontal">
                <Image Source="Batman" />
                <Button Text="Ingresos"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding IngresosCommand}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image Source="Batman" />
                <Button Text="Gastos"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding GastosCommand}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Image Source="Batman" />
                <Button Text="Balance"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding BalanceCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>